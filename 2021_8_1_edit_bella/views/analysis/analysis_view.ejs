    <div class="main-header">
        <h3 class="text-center">
            الخزنة
        </h3>
    </div>
    <div class="container-lg" id="attend-table" dir="rtl">
        <%- include('./date') %>

            <div id="e-bill" dir="rtl">
                <div class="container-lg">
                    <div class="row jc2">
                        <div class="col-md-6 col-lg-6 col-sm-10 col-10">
                            <div class="bill-card attendance-row">
                               
                                <div class="projects">
                                    <h3>قيمةالعقود الكلية</h3>
                                    <% var total_price = 0 %> 
                                    <% invoices.forEach(element => { %>
                                     <% total_price = element.total_price + total_price %> 
                                     <% }) %>
