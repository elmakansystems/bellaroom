<%- include('../components/head' , {title : 'اوامر الشغل السابقة'}) %>
<%- include('../components/right-sidebar') %>
<%- include('../components/left-sidebar') %>
<div class="m100">
    <div class="main-header">
        <h3 class="text-center">
            اوامر الشغل السابقة
        </h3>
    </div>
    <div class="container">

        <div class="order-list" dir="rtl">
            <div class="row order-list-row">
                <div class="col-md-3 order-list-item order_col">
                    الاسم
                </div>
                <div class="col-md-3 order-list-item  order_col">
                    الرقم
                </div>
                <div class="col-md-2 order-list-item  order_col">
                    تاريخ الامر
                </div>
                <div class="col-md-2 order-list-item  order_col">
                    تاريخ الاستلام
                </div>
                <div class="col-md-2 order-list-item  order_col">
                    التفاصيل
                </div>
            </div>
            <% orders.forEach(order => { %>
                <div class="row order-list-row">
                    <div class="col-md-3 order-list-item  order_col">
                        <%= order.name %>
                    </div>
                    <div class="col-md-3 order-list-item  order_col">
                        <%= order.phone %>
                    </div>
                    <div class="col-md-2 order-list-item  order_col">
                        <%= order.date %>
                    </div>
                    <div class="col-md-2 order-list-item  order_col">
                        <%= order.deliver %>
                    </div>
                    <div class="col-md-2 order-list-item order_col">
                        <a href="/orders/view/<%= order._id %>" class="btn btn-secondary mx-2">التفاصيل</a>
                        <a href="/orders/edit/<%= order._id %>" class="btn btn-warning mx-2">تعديل</a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

</div>




    <%- include('../components/footer') %>