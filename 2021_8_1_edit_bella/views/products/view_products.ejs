<%- include('../components/head' , {title : 'المنتجات المسجلة'}) %>
<%- include('../components/right-sidebar') %>
<%- include('../components/left-sidebar') %>
    <div class="m100">
        <div class="main-header">
            <h3 class="text-center">
                المنتجات المسجلة
            </h3>
        </div>
        <div class="container">
            <div class="order-list" dir="rtl">
                <div class="row order-list-row">
                    <div class="col-md-3 order-list-item">
                        المنتج
                    </div>
                    <div class="col-md-2 order-list-item">
                        المورد
                    </div>
                    <div class="col-md-2 order-list-item">
                        رقم المورد
                    </div>
                    <div class="col-md-2 order-list-item">
                        جملة المنتج الحالية
                    </div>
                    <div class="col-md-3 order-list-item">
                        التفاصيل
                    </div>
                </div>


                <% products.forEach(product => { %>
                    
                        <div class="row order-list-row">
                            <div class="col-md-3 order-list-item">
                                <%= product.name %>
                            </div>
                            <div class="col-md-2 order-list-item">
                                <%= product.dealer %>
                            </div>
                            <div class="col-md-2 order-list-item">
                                <%= product.phone %>
                        </div>
                        <div class="col-md-2 order-list-item">
                            <%= product.price %>
                        </div>
                        <div class="col-md-3 order-list-item">
                            <a href="/products/view_products/<%= product._id %>" class="btn btn-secondary px-2 mx-2">التفاصيل</a>
                            <a href="/products/edit/<%= product._id %>" class="btn btn-warning px- mx-2">تعديل</a>
                        </div>
                    </div>
                    
               
                    <% }) %>
            </div>
        </div>
    </div>





    <%- include('../components/footer') %>