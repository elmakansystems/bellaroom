<%- include('../components/head' , {title : 'المنتجات المسجلة'}) %>
<%- include('../components/right-sidebar') %>
<%- include('../components/left-sidebar') %>
    <div class="m100">
        <div class="main-header">
            <h3 class="text-center">
                 الموردين
            </h3>
        </div>
        <div class="container">
            <div class="order-list" dir="rtl">
                <div class="row order-list-row">
                    <div class="col-md-2 order-list-item">
                        المورد
                    </div>
                    <div class="col-md-2 order-list-item">
                        العنوان
                    </div>
                    <div class="col-md-2 order-list-item">
                        رقم المورد
                    </div>
                    <div class="col-md-2 order-list-item">
                        المبلغ المطلوب  
                    </div>
                    <div class="col-md-2 order-list-item">
                        المدفوع
                    </div>
                    <div class="col-md-2 order-list-item">
                    الباقي    
                    </div>
                </div>


                <% supplier.forEach(sup => { %>
                    
                    
                    <a href="/suppliers/view/<%= sup._id %>" style="color: black; text-decoration: none;">
                        <div class="row order-list-row">
                            <div class="col-md-2 order-list-item">
                                <%= sup.name %>
                            </div>
                            <div class="col-md-2 order-list-item">
                                <%= sup.address %>
                            </div>
                            <div class="col-md-2 order-list-item">
                                <%= sup.phone %>
                        </div>
                        <div class="col-md-2 order-list-item">
                            <%= sup.total_price %>
                        </div>
                        <div class="col-md-2 order-list-item">
                            <%= sup.total_paid %>
                        </div>
                        <div class="col-md-2 order-list-item">
                            <%= sup.total_price - sup.total_paid %>
                        </div>
                    </div>
                    </a>


                    <!-- <div class="col-md-3 order-list-item">
                            <a href="/products/view_products/<%= sup._id %>" class="btn btn-secondary px-2 mx-2">التفاصيل</a>
                            <a href="/products/edit/<%= sup._id %>" class="btn btn-warning px- mx-2">تعديل</a>
                        </div> -->
                    
               
                    <% }) %>
            </div>
        </div>
    </div>





    <%- include('../components/footer') %>